<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_review_fallback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Heading"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/message_review_fallback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Message"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes_button_review_fallback"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="Rate"
                android:textSize="17sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/no_button_review_fallback"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_none_stroked"
                android:text="No, Thanks"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/grad2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>