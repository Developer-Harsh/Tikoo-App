<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activities_bg"
    android:id="@+id/layout_main"
    tools:context=".MainActivity">
    <!-- Harsh Kumar Singh (snbApps) -->

    <include
        android:layout_centerInParent="true"
        layout="@layout/galaxy_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="5dp"
        android:backgroundTint="#311DA3"
        android:layout_marginTop="10dp"
        android:background="@drawable/choose_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="4dp"
            android:src="@drawable/ic_settings"
            app:tint="#90FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:padding="4dp"
            android:textColor="#90FFFFFF"
            android:fontFamily="@font/montserrat_medium" />

    </LinearLayout>
    <!-- Harsh Kumar Singh (snbApps) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_iv_main"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/tikoo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:layout_marginTop="-40dp"
            android:textColor="#E2FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/righteous"/>
        <!-- Harsh Kumar Singh (snbApps) -->

        <Button
            android:id="@+id/computer_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single Player"
            android:textColor="#fff"
            android:padding="14dp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/button_bg" />

        <Button
            android:id="@+id/online_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Players"
            android:textColor="#fff"
            android:padding="14dp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/button_bg_2" />

        <Button
            android:id="@+id/friends_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Two Player"
            android:textColor="#fff"
            android:padding="14dp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/button_bg_3" />

        <!-- Harsh Kumar Singh (snbApps) -->

    </LinearLayout>

</RelativeLayout>