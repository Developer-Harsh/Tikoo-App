<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tikoo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <style name="Theme.Tikoo.Progress" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#DC0C2653</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/grad1</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#888484</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#92B7C7E2</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/grad1</item>
        <item name="colorControlActivated">@color/grad1</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="background">@drawable/button_none_stroked</item>
        <item name="android:button">@null</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>